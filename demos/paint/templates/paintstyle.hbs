<div id = "paintStylePanelTab">
    <ul>
        <li><a href="#tab_PaintStylePlain">Plain</a></li>
        <li><a href="#tab_PaintStyleGradient">Gradient</a></li>
        <li><a href="#tab_PaintStylePattern">Pattern</a></li>
    </ul>
    <div id='tab_PaintStylePlain' class = "paint_style_content">
        <center> <input id = "PaintColorPicker" /> </center>
    </div>
    <div id='tab_PaintStyleGradient' class = "paint_style_content">
        <div id = "gradientStyleDiv">
            <center>
            <form>
                <label for="linearGradientType">Linear
                <input value = "linear" type="radio" name="gradientType" id="linearGradientType" checked  /></label>
                <label for="radialGradientType">Radial
                <input value = "radial" type="radio" name="gradientType" id="radialGradientType" /></label>
            </form>
            </center>
            <hr/>
            <strong>Bounds:</strong>
            <div>
                <table>
                    <tr>
                        <td>X1</td><td><input type = number id = "gradientX1" class = "gradient_input" value = "0.5" step = "0.01" /> </td>
                        <td>X2</td><td><input type = number id = "gradientX2" class = "gradient_input" value = "0.5" step = "0.01" /> </td>
                    </tr>
                    <tr>
                        <td>Y1</td><td><input type = number id = "gradientY1" class = "gradient_input" value = "0" step = "0.01" /> </td>
                        <td>Y2</td><td><input type = number id = "gradientY2" class = "gradient_input" value = "1" step = "0.01" /> </td>
                    </tr>
                    <tr id = "gradientRadiusRow">
                        <td>R1</td><td><input type = number id = "gradientR1" class = "gradient_input" value = "0.5" disabled step = "0.01" /> </td>
                        <td>R2</td><td><input type = number id = "gradientR2" class = "gradient_input" value = "1" disabled step = "0.01" /> </td>
                    </tr>
                </table>
            </div>
            <strong>Stops:</strong>
            <div> <center>
                <input id = "StopColorPicker" value = "#000000" ></input> 
                <input type = button class="ui-button ui-widget ui-corner-all ui-icon-plus" id = "addStopButton" value = "+"/>
                <input type = button class="ui-button ui-widget ui-corner-all ui-icon-minus" id = "removeStopButton" value = "-"/>
            </center> </div>
            <div style="solid 1px red; padding-top: 30px">
                <div id = "stopsSlider"> </div>
            </div>
        </div>
    </div>
    <div id='tab_PaintStylePattern' class = "paint_style_content">
    </div>
</div>
